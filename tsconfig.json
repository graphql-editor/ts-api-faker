{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "lib": ["es6", "es7","esnext.asynciterable"],
    "baseUrl": "src",
    "rootDir": "src",
	"types": ["node", "jest"],
    "esModuleInterop": true,
    "paths": {
        "@app/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["lib", "build", "node_modules"]
}
